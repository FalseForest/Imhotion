<style type="text/scss">
  div.social-button {
    background-color: #F2F1F8;
    padding: 1rem;
    width: 300px;
    margin: 10px;
    border-radius: 5px;
    transition: 500ms;
    line-height: 18px;
    cursor: pointer;

    &:hover {
      color: #4080FF;
      transition: 500ms;
      & .sub-social {
        color: #4080FF;
        transition: 500ms;
      }
    }

    & .sub-social {
      display: block;
      color: #808080;
      transition: 500ms;
    }
  }

  div.CTA {
    display: flex;
    line-height: 50px;
  }

  div.header {
    margin-bottom: 5rem
  }
</style>
