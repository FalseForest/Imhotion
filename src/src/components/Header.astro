---
import { Image } from 'astro:assets'
import houseIcon from '../content/assets/icons/house.svg';
import moviesIcon from '../content/assets/icons/film.svg';
import contactIcon from '../content/assets/icons/phone.svg';
import searchIcon from '../content/assets/icons/magnifying-glass.svg';
const iconSize = 30;
---
<style>
    nav {
        width: 100%;
    }

    ul {
        margin: 20px auto;
        padding: 0;
        display: flex;
        max-width: 100%;
        width: 400px;
        justify-content: space-around;
    }

    li {
        list-style: none;
    }

    a {
        text-decoration: none;
        color: black;
    }
</style>

<nav>
    <ul>
        <li>
            <a href="/">
                <Image src={houseIcon}
                       alt="Home Icon"
                       width={iconSize}
                       height={iconSize}>
                </Image>
            </a>
        </li>
        <li>
            <a href="/movies">
                <Image src={moviesIcon}
                       alt="Movies Icon"
                       width={iconSize}
                       height={iconSize}>
                </Image>
            </a>
        </li>
        <li>
            <a href="/contact">
                <Image src={contactIcon}
                       alt="Contact Icon"
                       width={iconSize}
                       height={iconSize}>
                </Image>
            </a>
        </li>
        <li>
            <a>
                <Image src={searchIcon}
                       alt="Search Icon"
                       width={iconSize}
                       height={iconSize}>
                </Image>
            </a>
        </li>
    </ul>
</nav>
